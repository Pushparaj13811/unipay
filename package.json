{
  "name": "unipay",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Unified payment gateway abstraction layer - Multi-provider payment orchestration with Stripe, Razorpay, and more",
  "keywords": [
    "payment",
    "payment-gateway",
    "stripe",
    "razorpay",
    "payment-orchestration",
    "multi-gateway",
    "monorepo"
  ],
  "author": "UniPay Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pushparaj13811/unipay.git"
  },
  "bugs": {
    "url": "https://github.com/Pushparaj13811/unipay/issues"
  },
  "homepage": "https://github.com/Pushparaj13811/unipay#readme",
  "packageManager": "pnpm@10.27.0",
  "workspaces": [
    "packages/*",
    "packages/adapters/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:all": "vitest run && vitest run --config vitest.integration.config.ts"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.0.0",
    "typescript": "^5.3.3",
    "vitest": "^3.0.0"
  }
}